<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemanomina.controller.NominaController">

   <!-- Íconos -->
   <!-- (omito repetir todos para no alargar, pero todos están bien, puedes dejarlos igual) -->

   <!-- Tabla de empleados -->
   <TableView fx:id="tblNomina" layoutX="26.0" layoutY="103.0" prefHeight="395.0" prefWidth="766.0">
      <columns>
         <TableColumn fx:id="colID" prefWidth="40.0" text="ID" />
         <TableColumn fx:id="colPeriodoInicio" prefWidth="137.0" text="Periodo Inicio" />
         <TableColumn fx:id="colPeriodoFin" prefWidth="122.0" text="Periodo Fin" />
         <TableColumn fx:id="colFechaGeneracion" prefWidth="156.0" text="Fecha de generacion" />
         <TableColumn fx:id="colTipo" prefWidth="158.0" text="Tipo" />
         <TableColumn fx:id="colEstado" prefWidth="158.0" text="Estado" />
      </columns>
   </TableView>

   <!-- Botones de acción -->
   <Button fx:id="btnGenerarNomina" layoutX="643.0" layoutY="40.0" onAction="#onGenerarNomina" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Generar Nomina" />
   <Button fx:id="btnVerDetalleNomina" layoutX="390.0" layoutY="40.0" onAction="#onVerMovimientosNomina" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Ver Movimientos" />
   <Button fx:id="btnAgregarMovimiento" layoutX="232.0" layoutY="40.0" onAction="#onAgregarMovimiento" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Agregar Movimientos" />
   <Button fx:id="btnCrearNomina" layoutX="109.0" layoutY="40.0" onAction="#onCrearNomina" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Crear Nomina" />
   <Button fx:id="btnVerDetalleNomina1" layoutX="517.0" layoutY="40.0" onAction="#onVerDetalleNomina" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Ver Detalle" />

</AnchorPane>
