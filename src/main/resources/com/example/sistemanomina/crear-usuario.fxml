<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="500.0" maxWidth="750.0" prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemanomina.controller.CrearUsuarioController">

   <!-- Imagenes -->
   <!-- (Omitidas por brevedad pero puedes mantenerlas si son necesarias) -->

   <!-- Campos de formulario -->
   <Label layoutX="299.0" layoutY="102.0" text="Nombre de Usuario" />
   <TextField fx:id="txtNombreUsuario" layoutX="251.0" layoutY="132.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese nombre de usuario" style="-fx-background-radius: 10;" />

   <Label layoutX="485.0" layoutY="308.0" text="ID Empleado" />
   <TextField fx:id="txtNombre" layoutX="419.0" layoutY="338.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese ID Empleado" style="-fx-background-radius: 10;" />

   <Label layoutX="321.0" layoutY="201.0" text="Contraseña" />
   <TextField fx:id="txtContra" layoutX="251.0" layoutY="237.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese contraseña" style="-fx-background-radius: 10;" />

   <Label layoutX="164.0" layoutY="299.0" text="Rol" />

   <!-- Botones acción -->
   <Button fx:id="btnguardare" layoutX="265.0" layoutY="436.0" onAction="#onbtnguardare" prefHeight="44.0" prefWidth="173.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Crear Usuario" />

   <Button fx:id="btnregresar" layoutX="629.0" layoutY="40.0" onAction="#onbtnregresar" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Regresar" />

   <!-- Texto superior -->
   <Text fx:id="MensajeAccion" layoutX="44.0" layoutY="53.0" text="Crear nuevo Usuario">
      <font><Font size="23.0" /></font>
   </Text>
   <ComboBox fx:id="comboRol" layoutX="104.0" layoutY="338.0" prefHeight="44.0" prefWidth="138.0" promptText="Empleado" style="-fx-background-radius: 10;" />

</AnchorPane>
