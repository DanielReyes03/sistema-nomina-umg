<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemanomina.controller.MovimientosNominaController">

   <!-- Íconos -->
   <!-- (omito repetir todos para no alargar, pero todos están bien, puedes dejarlos igual) -->

   <!-- Tabla de empleados -->
   <TableView fx:id="tblDetalleNomina" layoutX="26.0" layoutY="83.0" prefHeight="415.0" prefWidth="766.0">
      <columns>
         <TableColumn fx:id="colID" prefWidth="40.0" text="ID" />
         <TableColumn fx:id="colIdNomina" prefWidth="77.0" text="ID Nomina" />
         <TableColumn fx:id="colIdEmpleado" prefWidth="84.0" text="ID Empleado" />
         <TableColumn fx:id="colNombreEmpleado" prefWidth="147.0" text="Nombre Empleado" />
         <TableColumn fx:id="colPeriodoInicio" prefWidth="104.0" text="Periodo Inicio" />
         <TableColumn fx:id="colPeriodoFin" prefWidth="100.0" text="Periodo Fin" />
         <TableColumn fx:id="colNombreConcepto" prefWidth="109.0" text="Concepto" />
         <TableColumn fx:id="colMonto" prefWidth="101.0" text="Monto" />
      </columns>
   </TableView>

   <!-- Botones de acción -->
   <Button fx:id="btnGenerarRecibo" layoutX="642.0" layoutY="29.0" onAction="#onGenerarRecibo" prefHeight="35.0" prefWidth="116.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Imprimir Recibo" />

</AnchorPane>
