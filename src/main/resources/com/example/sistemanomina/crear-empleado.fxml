<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="500.0" maxWidth="750.0" prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemanomina.controller.CrearEmpleadoController">

   <!-- Imagenes -->
   <!-- (Omitidas por brevedad pero puedes mantenerlas si son necesarias) -->

   <!-- Campos de formulario -->
   <Label layoutX="47.0" layoutY="120.0" text="Nombre" />
   <TextField fx:id="txtNombre" layoutX="45.0" layoutY="144.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese su nombre" style="-fx-background-radius: 10;" />

   <Label layoutX="265.0" layoutY="120.0" text="Apellido" />
   <TextField fx:id="txtApellido" layoutX="260.0" layoutY="145.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese su apellido" style="-fx-background-radius: 10;" />

   <Label layoutX="475.0" layoutY="120.0" text="DPI" />
   <TextField fx:id="txtDPI" layoutX="476.0" layoutY="144.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese su DPI" style="-fx-background-radius: 10;" />

   <Label layoutX="263.0" layoutY="207.0" text="Puesto" />
   <ComboBox fx:id="comboPuesto" layoutX="261.0" layoutY="235.0" prefHeight="44.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

   <Label layoutX="478.0" layoutY="207.0" text="Fecha de ingreso" />
   <DatePicker fx:id="DTFechin" layoutX="478.0" layoutY="235.0" prefHeight="44.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

   <Label layoutX="46.0" layoutY="207.0" text="Departamento" />

   <Label layoutX="49.0" layoutY="294.0" text="Salario" />
   <TextField fx:id="txtSalario" layoutX="43.0" layoutY="323.0" prefHeight="44.0" prefWidth="200.0" promptText="Ingrese salario" style="-fx-background-radius: 10;" />

   <!-- Botones acciÃ³n -->
   <Button fx:id="btnguardare" layoutX="298.0" layoutY="434.0" onAction="#onbtnguardare" prefHeight="44.0" prefWidth="173.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Guardar empleado" />

   <Button fx:id="btnregresar" layoutX="629.0" layoutY="40.0" onAction="#onbtnregresar" prefHeight="38.0" prefWidth="100.0" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Regresar" />

   <!-- Texto superior -->
   <Text fx:id="MensajeAccion" layoutX="49.0" layoutY="68.0" text="Crear nuevo Empleado">
      <font><Font size="23.0" /></font>
   </Text>
   <ComboBox fx:id="comboDepartamento" layoutX="45.0" layoutY="235.0" prefHeight="44.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

</AnchorPane>
