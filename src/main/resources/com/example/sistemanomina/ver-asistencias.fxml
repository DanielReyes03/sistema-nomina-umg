<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sistemanomina.controller.CrearAsistenciaController">

    <!-- Empleado -->
    <ComboBox fx:id="comboempleados" layoutX="270.0" layoutY="232.0" prefHeight="42.0" prefWidth="187.0"/>
    <Text layoutX="311.0" layoutY="223.0" text="EMPLEADO">
        <font>
            <Font name="System Bold" size="19.0"/>
        </font>
    </Text>

    <!-- Fecha -->
    <DatePicker fx:id="inputfecha" layoutX="542.0" layoutY="232.0" prefHeight="43.0" prefWidth="187.0"/>
    <Text layoutX="605.0" layoutY="219.0" text="FECHA">
        <font>
            <Font name="System Bold" size="19.0"/>
        </font>
    </Text>

    <!-- Hora Entrada -->
    <Text layoutX="291.0" layoutY="331.0" text="HORA ENTRADA">
        <font>
            <Font name="System Bold" size="19.0"/>
        </font>
    </Text>
    <HBox layoutX="272.0" layoutY="338.0" spacing="5">
        <ComboBox fx:id="comboHoraEntradaHora" prefWidth="80.0"/>
        <Label text=":"/>
        <ComboBox fx:id="comboHoraEntradaMinuto" prefWidth="80.0"/>
    </HBox>

    <!-- Hora Salida -->
    <Text layoutX="575.0" layoutY="332.0" text="HORA SALIDA">
        <font>
            <Font name="System Bold" size="19.0"/>
        </font>
    </Text>
    <HBox layoutX="542.0" layoutY="338.0" spacing="5">
        <ComboBox fx:id="comboHoraSalidaHora" prefWidth="80.0"/>
        <Label text=":"/>
        <ComboBox fx:id="comboHoraSalidaMinuto" prefWidth="80.0"/>
    </HBox>

    <!-- Botones -->
    <Button fx:id="inputguardadasistencia" layoutX="272.0" layoutY="471.0"
            prefHeight="43.0" prefWidth="183.0" text="GUARDAR ASISTENCIA"/>
    <Button fx:id="inputverasistencia" layoutX="542.0" layoutY="470.0"
            prefHeight="43.0" prefWidth="183.0" text="VER ASISTENCIAS"/>

</AnchorPane>
