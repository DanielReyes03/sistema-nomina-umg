<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="700" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemanomina.controller.HorasExtraController">

    <children>
        <TableView fx:id="InputTablaVacaciones" layoutX="9.0" layoutY="14.0" prefHeight="347.0" prefWidth="683.0">
            <columns>
                <TableColumn fx:id="ColID" prefWidth="50" text="ID" />
                <TableColumn fx:id="ColEmpleadoId" prefWidth="80" text="ID Empleado" />
                <TableColumn fx:id="ColNombre" prefWidth="132.0" text="Empleado" />
                <TableColumn fx:id="ColFecha" prefWidth="118.0" text="Fecha" />
                <TableColumn fx:id="ColHora" prefWidth="70" text="Horas" />
                <TableColumn fx:id="ColMotivo" prefWidth="156.0" text="Motivo" />
                <TableColumn fx:id="ColAprobado" prefWidth="76.0" text="Aprobado" />
            </columns>
        </TableView>

        <Button fx:id="botNuevo" layoutX="14" layoutY="380" mnemonicParsing="false" onAction="#botNuevo" prefWidth="80" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Nuevo" />
        <Button fx:id="botactualizar" layoutX="110" layoutY="380" mnemonicParsing="false" onAction="#botactualizar" prefWidth="80" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Actualizar" />
        <Button fx:id="BotEliminar" layoutX="210" layoutY="380" mnemonicParsing="false" onAction="#boteliminar" prefWidth="80" style="-fx-background-color: #A8D5B9; -fx-background-radius: 10;" text="Eliminar" />


    </children>
</AnchorPane>
